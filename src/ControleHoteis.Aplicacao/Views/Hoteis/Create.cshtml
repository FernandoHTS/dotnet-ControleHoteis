@model ControleHoteis.Aplicacao.ViewModels.HotelViewModel

@{
    ViewData["Title"] = "Novo Hotel";
}

<h3 style="padding-top: 50px">@ViewData["Title"] </h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-8">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Cnpj" class="control-label"></label>
                    <input asp-for="Cnpj" class="form-control cnpj" />
                    <span asp-validation-for="Cnpj" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea cols="40" rows="5" asp-for="Descricao" class="form-control"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>

            <h4>Endereço</h4>
            <hr />

            <partial name="_EnderecoCreate" />

            <div class="form-group" style="float:right">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Cadastrar</button>
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        BuscaCep();
    </script>

}

